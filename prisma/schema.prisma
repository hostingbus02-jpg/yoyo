datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Update {
  id        String   @id @default(uuid())
  title     String
  content   String
  created_at DateTime @default(now()) @map("created_at")
  
  @@map("updates")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  created_at DateTime @default(now()) @map("created_at")
  
  @@map("User")
}
